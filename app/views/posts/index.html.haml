- @posts.each do |post|
  %li
    %div.row
      %div.col-md-4
        %img.pull-left{:src => asset_path("image.png"), :alt=> 'Imagen de la noticia'}

      %div.col-md-8
        %h3= post.title


        %ul.footer-info
          %li 
            Fecha
            = post.date
          %li
            Usuario 
            = post.userId
          %li
            Categoria
            = post.catId

        %p= post.description

        %a{:href=>post.link} Seguir Link

      %ul.social-info
        %li
          =post.votes
          %i.fa.fa-thumbs-o-up.fa-lg Me gusta
        %li
          =post.numComments
          %i.fa.fa-comments-o.fa-lg Comentarios 


-#
  %h1 Listing posts

  %table
    %thead
      %tr
        %th Title
        %th Description
        %th Content
        %th Link
        %th Userid
        %th Date
        %th Catid
        %th Votes
        %th Numcomments
        %th Status
        %th
        %th
        %th

    %tbody
      - @posts.each do |post|
        %tr
          %td= post.title
          %td= post.description
          %td= post.content
          %td= post.link
          %td= post.userId
          %td= post.date
          %td= post.catId
          %td= post.votes
          %td= post.numComments
          %td= post.status
          %td= link_to 'Show', post
          %td= link_to 'Edit', edit_post_path(post)
          %td= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Post', new_post_path
